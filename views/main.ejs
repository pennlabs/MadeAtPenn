<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900italic' rel='stylesheet' type='text/css'>
     <link href="/style.css" rel="stylesheet" type="text/css">
    <meta name="description" content="">
    <meta name="author" content="">
    <script src="//code.jquery.com/jquery-1.9.1.js"></script>
    <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

    <title>Penn Open Source</title>
    <script>
      
      $(document).ready(function(e){ 
          $('.project').hover( 
            function () {
                  $(this).find('.app_description').fadeIn('fast');
              },
            function () {
                  $(this).find('.app_description').fadeOut('fast');
            })
          $('.view').hover(
             function () {
                  $(this).toggleClass('view-background');
             }
            )

    });

    </script>



  </head>

  <body>


 <div id="banner">
            <h1>Penn Open Source</h1>
              
            <a href="http://www.pennlabs.org"> <img src="/labs2.png" width=50px height=50px /> </a>
            <ul id="nav"> 
              <a href="/"><li>Home</li></a>
              <a href="/about"><li>FAQ</li></a>
              <a href="/submit"><li>Submit</li></a>
            </ul>
  </div>



    <div id="projects">

    <% projects.forEach(function(project, index){ %>
  
        <% if (project.approved == 1) { %>
              <div class="project" id= <%= project._id %> >
                <div class="app_image">
                   <img width='320px' height='200px' src= <%= "https://s3-us-west-2.amazonaws.com/penn-open-source/images/" + project._id + ".jpg" %> /> 
                   
                        <div class="app_description">
                                 
                              
                                <p> <%= project.description %> </p>
                              
                                   <a href=<%= project.demo_link %>> <div class="view">
                                    View App
                                </div> </a>



                                  <div class="tags">
                                    <span>
                                     <% if (project.github_permis == 'yes') { %>
                                        <p> <a href= <%= project.github %> > Source Code </a> </p>
                                      <% } %>

                                      <p> Tags:    
                                      <% var array = project.tags.split(","); %>
                                      <% for(var i=0; i<array.length; i++) { %>
                                      <a href =  <%= '/tag/' + array[i].trim() %> ><%= array[i] %></a>  
                                      <% } %>
                                    </p></span>
                                  </div>
                        </div>
                 </div>

                 <div class="app_title">
                    <span><h2> <a href=<%= project.demo_link %>> <%= project.app_name %></a> </h2></span>    
                    <br />
                    <h3> <%= project.builders %>  </h3> 
                 </div>

              </div>
        <% } %> 
    <% }) %>
    </div>


    <div id="footer">
      <div id='social'>
        <a href="http://twitter.com/pennlabs"><img class="icon" src="twitter.png"/></a>
        <a href="https://www.facebook.com/labsatpenn"><img class="icon" src="facebook.gif"/></a>
        <span>Penn Labs: Improving student technology at Penn since 2010</span>
      </div>
    </div>




  </body>


  </html>